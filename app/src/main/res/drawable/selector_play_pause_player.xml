<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size android:height="@dimen/btn_play_oval"/>
                    <size android:width="@dimen/btn_play_oval"/>
                    <solid android:color="@color/colorOrange"/>
                </shape>
            </item>

            <item android:drawable="@drawable/ripple_pause"
                  android:gravity="center"
                  android:height="@dimen/btn_player_drawable"
                  android:width="@dimen/btn_player_drawable">
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size android:height="@dimen/btn_play_oval"/>
                    <size android:width="@dimen/btn_play_oval"/>
                    <solid android:color="@color/colorOrange"/>
                </shape>
            </item>

            <item android:drawable="@drawable/ripple_play"
                  android:gravity="center"
                  android:height="@dimen/btn_player_drawable"
                  android:width="@dimen/btn_player_drawable">
            </item>
        </layer-list>
    </item>
</selector>